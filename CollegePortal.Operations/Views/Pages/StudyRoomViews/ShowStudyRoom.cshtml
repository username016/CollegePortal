@model IEnumerable<CollegePortal.Entities.Models.StudyRoomBookings>

<h1>Study Room Bookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>Room ID</th>
            <th>Student Name</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.studyRoomId</td>
                <td>@booking.Student?.studentId</td> <!-- Assuming Student has a Name property -->
                <td>@booking.startTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@booking.endTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@booking.Duration</td>
                <td>
                    <a asp-controller="StudyRoom" asp-action="Edit" asp-route-id="@booking.bookingId" class="btn btn-warning">Edit</a>
                    <a asp-controller="StudyRoom" asp-action="Delete" asp-route-id="@booking.bookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="StudyRoom" asp-action="Create" class="btn btn-primary">Add New Study Room Booking</a>
