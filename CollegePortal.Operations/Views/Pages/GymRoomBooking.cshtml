@model IEnumerable<CollegePortal.Entities.Models.GymRoomBookings>

<h1>Gym Room Bookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Student ID</th>
            <th>Gym Room ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.bookingId</td>
                <td>@booking.studentId</td>
                <td>@booking.gymRoomId</td>
                <td>@booking.startTime</td>
                <td>@booking.endTime</td>
                <td>
                    <a asp-controller="GymRoom" asp-action="Edit" asp-route-id="@booking.bookingId" class="btn btn-warning">Edit</a>
                    <a asp-controller="GymRoom" asp-action="Delete" asp-route-id="@booking.bookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="GymRoom" asp-action="Create" class="btn btn-primary">Book a Gym Room</a>
