@model CollegePortal.Entities.Models.GymRoomBookings

<h2>Book a Gym Room</h2>

<form asp-action="Book" method="post">
    <div class="form-group">
        <label asp-for="studentId"></label>
        <select asp-for="studentId" asp-items="@(new SelectList(ViewBag.Students, "studentId", "studentName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="gymRoomId"></label>
        <select asp-for="gymRoomId" asp-items="@(new SelectList(ViewBag.Rooms, "gymRoomId", "gymRoomId"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="startTime"></label>
        <input asp-for="startTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="endTime"></label>
        <input asp-for="endTime" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Book Room</button>
</form>
