@model CollegePortal.Entities.Models.TutorBookings

<h1>Add Tutor Booking</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="studentId">Student ID</label>
        <input asp-for="studentId" class="form-control" />
        <span asp-validation-for="studentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="tutorId">Tutor ID</label>
        <input asp-for="tutorId" class="form-control" />
        <span asp-validation-for="tutorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="startTime">Start Time</label>
        <input asp-for="startTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="startTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="endTime">End Time</label>
        <input asp-for="endTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="endTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Booking</button>
</form>
