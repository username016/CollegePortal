@model IEnumerable<CollegePortal.Entities.Models.LostAndFound>

<h1>Lost and Found Items</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Post ID</th>
            <th>Student ID</th>
            <th>Description</th>
            <th>Date Found</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.postId</td>
                    <td>@item.studentId</td>
                    <td>@item.itemDescription</td>
                    <td>@item.foundDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@item.location</td>
                    <td>
                        <a asp-action="LFUpdate" asp-route-id="@item.postId" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No items found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddLFItem" class="btn btn-primary">Add New Item</a>
